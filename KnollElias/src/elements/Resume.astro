---
const title = "There is not a lot i have to say.";
const points = ["Life is short", "We are in this all togeather.", "I know programming"];
---

<div class="container">
  <p>{title}</p>
  <ul>
  {points.map(route => (
    <li id={route + "c"}><p>{route}</p></li>
  ))}
  </ul>
</div>


<style>
  p, ul {
    margin: 0;
    color: white;
  }
  .container {
    background-color: rgb(0, 0, 0);
    display: flex;
    width: 100vw;
    height: 100vh;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
</style>